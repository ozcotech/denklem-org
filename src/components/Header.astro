---
import Navigation from './Navigation.astro';
import ThemeToggle from './ThemeToggle.astro';
import LanguageToggle from './LanguageToggle.astro';
import iconUrl from '../assets/icon.png?url';
---

<header class="bg-base-100 shadow-sm border-b border-base-200">
  <div class="container">
    <div class="navbar px-0">
      <!-- Logo -->
      <div class="navbar-start">
        <a href="/" class="btn btn-ghost p-0">
          <img src={iconUrl} alt="Denklem" class="w-10 h-10 rounded-lg" />
        </a>
      </div>
      
      <!-- Desktop navigation removed -->

      <!-- Theme Toggle + Language Toggle + Mobile menu -->
      <div class="navbar-end space-x-0.5">
        <!-- Download button -->
        <a href="https://apps.apple.com/tr/app/denklem/id6746580824" target="_blank" id="download-button" class="flex-shrink-0" aria-label="Download">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
            <path d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2" />
            <polyline points="8 12 12 16 16 12" />
            <line x1="12" y1="16" x2="12" y2="4" />
          </svg>
        </a>
        <!-- Theme Toggle Button -->
        <ThemeToggle />
        
        <!-- Language Toggle Button -->
        <LanguageToggle />
        
        <!-- Hamburger menu on all screen sizes -->
        <div class="dropdown dropdown-end ml-2">
          <div tabindex="0" role="button" class="btn btn-ghost" id="hamburger-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </div>
          <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52 z-50">
            <Navigation mobile={true} />
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>