---
export interface Props {
  mobile?: boolean;
}

const { mobile = false } = Astro.props;

// Language detection
const { pathname } = Astro.url;
const isEnglish = pathname.startsWith('/en');

// Translations object
const texts = {
  tr: {
    home: 'Ana Sayfa',
    about: 'Uygulama HakkÄ±nda',
    blog: 'Blog',
    announcements: 'Duyurular',
    privacy: 'Gizlilik'
  },
  en: {
    home: 'Home',
    about: 'About App',
    blog: 'Blog',
    announcements: 'Announcements',
    privacy: 'Privacy'
  }
};

const t = texts[isEnglish ? 'en' : 'tr'];

// Base URL for links
const baseUrl = isEnglish ? '/en' : '';

const navItems = [
  { name: t.home, href: baseUrl + '/' },
  { name: t.about, href: baseUrl + '/about' },
  { name: t.blog, href: baseUrl + '/blog' },
  { name: t.announcements, href: baseUrl + '/announcements' },
  { name: t.privacy, href: baseUrl + '/privacy' },
];

const currentPath = Astro.url.pathname;
---

{mobile ? (
  <!-- Mobile Navigation -->
  {navItems.map((item) => (
    <li>
      <a 
        href={item.href}
        class={`${currentPath === item.href ? 'active' : ''}`}
      >
        {item.name}
      </a>
    </li>
  ))}
) : (
  <!-- Desktop Navigation -->
  <ul class="menu menu-horizontal px-1">
    {navItems.map((item) => (
      <li>
        <a 
          href={item.href}
          class={`${currentPath === item.href ? 'active' : ''}`}
        >
          {item.name}
        </a>
      </li>
    ))}
  </ul>
)}